<%- include('partials/header') %>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">Bienvenue sur O'Quiz</h2>
        <div class="row">
            <% for(let tag of tags){ %>
        
            <div class="col-3 p-4 text-center">
                <a class="btn btn-block btn-lg tag tag--<%=tag.name.toLowerCase()%>" href="/tag/<%=tag.id%>">
                    <%=tag.name%>
                </a>
            </div>
            
            <% } %>
        </div>
    </div>


    <div class="card-deck row mb-3 text-center">

        <% for(let quiz of quizzes){ %>
        
        <div class="col-4 d-flex flex-column">
            <div class="card mb-4 shadow-sm d-flex flex-column">
                <div class="card-header">
                    <h3 class="h3 my-0 font-weight-normal"><%=quiz.title%></h3>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h4 class="h4 card-title pricing-card-title"><%=quiz.description%></h4>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>par <%=quiz.author.getFullName()%></li>
                    </ul>
                    <a href="/quiz/<%=quiz.id%>" class="btn btn-lg btn-block btn-primary text-white">Jouer</a>
                </div>
            </div>
        </div>

        <% } %>

    </div>

<%- include('partials/footer') %>